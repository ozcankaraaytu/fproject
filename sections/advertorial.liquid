{% style %}
  #section-{{ section.id }} {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
  }
{% endstyle %}

<div id="section-{{ section.id }}" class="advertorial">
  <div class="page-width">
    <div class="div-wrapper">
      <div class="content-side">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'richtext' %}
              {% assign blockID = block.settings['block-id'] %}
              {% assign textAlign = block.settings['text-align'] %}
              {% assign richText = block.settings.richtext %}
              {% assign textColor = block.settings['text-color'] %}
              <div
                class="advertorial-richtext"
                id="{{ blockID }}"
                style="text-align: {{ textAlign }}; color: {{ textColor }};"
                {{ block.shopify_attributes }}
              >
                {{ richText }}
              </div>

            {% when 'image' %}
              {% assign image = block.settings.image %}
              {% assign bottomText = block.settings['bottom-text'] %}
              {% assign backgroundColor = block.settings['background-color'] %}
              {% if image != blank %}
                <div
                  class="advertorial-image"
                  style="background-color: {{ backgroundColor }}"
                  {{ block.shopify_attributes }}
                >
                  <img src="{{ image | image_url }}" width="100%">
                  <div class="bottom-text">{{ bottomText }}</div>
                </div>
              {% endif %}

            {% when 'video' %}
              {% assign videoData = block.settings.video %}
              {% assign bottomText = block.settings['bottom-text'] %}
              {% assign backgroundColor = block.settings['background-color'] %}
              <div
                class=" autoloop-video"
                style="background-color: {{ backgroundColor }}"
                {{ block.shopify_attributes }}
              >
                {% if videoData != blank -%}
                  {{-
                    videoData
                    | video_tag:
                      loop: 'loop',
                      muted: true,
                      playsinline: true,
                      autoplay: true,
                      id: 'featured_video',
                      class: 'autoplay'
                  -}}
                {%- endif %}
                <div class="bottom-text">{{ bottomText }}</div>
              </div>

            {% when 'checkmark-list' %}
              {% assign blockID = block.settings['block-id'] %}
              <div id="{{ blockID }}" class="checkmark-list" {{ block.shopify_attributes }}>
                {% assign checkmarkList = block.settings['checkmark-list'] %}
                {{ checkmarkList }}
              </div>

            {% when 'button' %}
              {% assign buttonLabel = block.settings['button-label'] %}
              {% assign buttonURL = block.settings['button-url'] %}
              {% assign buttonBackground = block.settings['button-background'] %}
              <div class="advertorial-button" {{ block.shopify_attributes }}>
                <a href="{{ buttonURL }}" style="background-color: {{ buttonBackground }}">{{ buttonLabel }}</a>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="sticky-side mobile_hide">
        <div class="set-sticky-style">
          <h3>Recommended:</h3>
          <img
            src="https://cdn.shopify.com/s/files/1/0587/5135/2963/files/amazon-5-stars.png?v=1711542507"
            width="100px"
          >
          <p>4.8 | 1,897 Reviews</p>
          <h4 style="color: #19af42;">Anti-Aging Shower Gel</h4>
          <div class="checkmark-list">
            <ul>
              <li>Effectively eliminates wrinkles & sagginess.</li>
              <li>Visible results after first use.</li>
              <li>Permanent results with regular use.</li>
              <li>Natural ingredients and safe for daily use</li>
            </ul>
          </div>
          <img src="https://cdn.shopify.com/s/files/1/0587/5135/2963/files/sag-gorsel.jpg?v=1711543141" width="100%">
          <div class="advertorial-button" style="width: 100%;">
            <a href="{{ buttonURL }}" style="background-color: #19AF42">Check Availability Â»</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}

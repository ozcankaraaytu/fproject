{{ 'why-prefer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #why-prefer--{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }
{%- endstyle -%}

<div id="why-prefer--{{ section.id }}" class="why-prefer-section{% if section.settings.desktop_hide %} desktop_hide{% endif %}{% if section.settings.mobile_hide %} mobile_hide{% endif %}">
  <div class="page-width">
    <!-- Heading -->
    {% if section.settings.heading != blank %}
      <h2 class="why-prefer-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <!-- Description -->
    {% if section.settings.description != blank %}
      <p class="why-prefer-description">{{ section.settings.description }}</p>
    {% endif %}

    <!-- Features Grid -->
    <div class="features-grid">
      <!-- Feature 1: Cross Link Technology -->
      <div class="feature-item">
        <div class="feature-icon">
          <svg viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="10" cy="10" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <circle cx="40" cy="10" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <circle cx="25" cy="25" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <circle cx="10" cy="40" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <circle cx="40" cy="40" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <line x1="13" y1="10" x2="22" y2="23" stroke="currentColor" stroke-width="1.5"/>
            <line x1="37" y1="10" x2="28" y2="23" stroke="currentColor" stroke-width="1.5"/>
            <line x1="13" y1="40" x2="22" y2="27" stroke="currentColor" stroke-width="1.5"/>
            <line x1="37" y1="40" x2="28" y2="27" stroke="currentColor" stroke-width="1.5"/>
          </svg>
        </div>
        <p class="feature-title">{{ section.settings.feature_1_title }}</p>
      </div>

      <!-- Feature 2: Removes Wrinkles -->
      <div class="feature-item">
        <div class="feature-icon">
          <svg viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M5 15 Q15 10, 25 15 T45 15" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M5 25 Q15 20, 25 25 T45 25" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M5 35 Q15 30, 25 35 T45 35" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M35 8 L40 5 M42 12 L47 10" stroke="currentColor" stroke-width="1.5"/>
          </svg>
        </div>
        <p class="feature-title">{{ section.settings.feature_2_title }}</p>
      </div>

      <!-- Feature 3: Stop Skin Sagginess -->
      <div class="feature-item">
        <div class="feature-icon">
          <svg viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M25 5 L27 15 L25 12 L23 15 Z" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M15 12 L20 20 L16 18 L14 22 Z" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M35 12 L30 20 L34 18 L36 22 Z" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <circle cx="10" cy="8" r="1.5" fill="currentColor"/>
            <circle cx="40" cy="8" r="1.5" fill="currentColor"/>
            <circle cx="8" cy="18" r="1" fill="currentColor"/>
            <circle cx="42" cy="18" r="1" fill="currentColor"/>
            <path d="M10 30 Q25 45, 40 30" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M15 32 Q25 42, 35 32" stroke="currentColor" stroke-width="1.5" fill="none"/>
          </svg>
        </div>
        <p class="feature-title">{{ section.settings.feature_3_title }}</p>
      </div>

      <!-- Feature 4: Easy Filling Effect -->
      <div class="feature-item">
        <div class="feature-icon">
          <svg viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M5 20 Q12 15, 20 20 T35 20 T50 20" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M5 30 Q12 25, 20 30 T35 30 T50 30" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M5 40 Q12 35, 20 40 T35 40 T50 40" stroke="currentColor" stroke-width="1.5" fill="none"/>
          </svg>
        </div>
        <p class="feature-title">{{ section.settings.feature_4_title }}</p>
      </div>

      <!-- Feature 5: Daily Use -->
      <div class="feature-item">
        <div class="feature-icon">
          <svg viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="8" y="12" width="34" height="30" rx="2" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <line x1="8" y1="20" x2="42" y2="20" stroke="currentColor" stroke-width="1.5"/>
            <line x1="15" y1="8" x2="15" y2="14" stroke="currentColor" stroke-width="1.5"/>
            <line x1="35" y1="8" x2="35" y2="14" stroke="currentColor" stroke-width="1.5"/>
            <circle cx="18" cy="28" r="2" fill="currentColor"/>
            <circle cx="25" cy="28" r="2" fill="currentColor"/>
            <circle cx="32" cy="28" r="2" fill="currentColor"/>
            <circle cx="18" cy="36" r="2" fill="currentColor"/>
            <circle cx="25" cy="36" r="2" fill="currentColor"/>
          </svg>
        </div>
        <p class="feature-title">{{ section.settings.feature_5_title }}</p>
      </div>

      <!-- Feature 6: Cell Formation -->
      <div class="feature-item">
        <div class="feature-icon">
          <svg viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <ellipse cx="25" cy="30" rx="12" ry="15" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <ellipse cx="25" cy="28" rx="6" ry="8" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <path d="M20 12 L25 5 L30 12" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <circle cx="18" cy="8" r="1.5" fill="currentColor"/>
            <circle cx="32" cy="8" r="1.5" fill="currentColor"/>
          </svg>
        </div>
        <p class="feature-title">{{ section.settings.feature_6_title }}</p>
      </div>
    </div>

    <!-- Shop Now Button -->
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="shop-now-btn">{{ section.settings.button_text }}</a>
    {% endif %}

    <!-- Discount Text -->
    {% if section.settings.discount_text != blank %}
      <p class="discount-text">{{ section.settings.discount_text }}</p>
    {% endif %}
  </div>
</div>


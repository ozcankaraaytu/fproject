{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.dk_padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.dk_padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.mb_padding_top }}px;
      padding-bottom: {{ section.settings.mb_padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign scheme1 = settings.color_schemes | first %}

{% if section.settings['image-as-url'] != blank %} <a href="{{ section.settings.image-as-url }}">{% endif %}
<div class="image-with-text {{ section.settings.class_name }} image-with-text--{{ section.settings.content_layout }} page-width isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %} section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} {% if section.settings.hide_in_desktop %} desktop_hide {% endif %} {% if section.settings.hide_in_mobile %} mobile_hide {% endif %}">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item {% if section.settings.image_hide_in_desktop %} desktop_hide {% endif %} {% if section.settings.image_hide_in_mobile %} mobile_hide {% endif %}">
      <div
        class="image-with-text__media image-with-text__media--{{ section.settings.height }} gradient global-media-settings {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
            {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
          {%- else -%}
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
          {%- endif -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: sizes, widths: widths
          }}
        {%- else -%}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>

    <div class="image-with-text__text-item grid__item">
      <div
        id="ImageWithText--{{ section.id }}"
        class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient content-container"
      >
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <div class="heading-main {% if block.settings.hide_in_desktop %} desktop_hide {% endif %} {% if block.settings.hide_in_mobile %} mobile_hide {% endif %}">
                <h2
                  class="heading inline-richtext {{ block.settings.heading_size }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading }}
                </h2>
              </div>
            {%- when 'caption' -%}
              <p
                class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div
                class="description rte {{ block.settings.text_style }} {% if block.settings.hide_in_desktop %} desktop_hide {% endif %} {% if block.settings.hide_in_mobile %} mobile_hide {% endif %}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.text }}
              </div>
            {%- when 'video' -%}
              <div class="video_wrap {% if block.settings.hide_in_desktop %} desktop_hide {% endif %} {% if block.settings.hide_in_mobile %} mobile_hide {% endif %}">
                {%- if block.settings.videosd != blank or block.settings.video != blank -%}
                  {% if block.settings.videosd %}
                    <div class="videoa video-section__media">
                      {%- if block.settings.videosd.type == 'youtube' -%}
                        <iframe
                          id="youtube-video"
                          class="yt-videos"
                          width="420"
                          height="515"
                          src="https://www.youtube.com/embed/{{ block.settings.videosd.id }}?{% if block.settings.autoplay %}autoplay=1{% endif %}&{% if block.settings.mute %}mute=1{% endif %}&{% if block.settings.yt_option %}amp;controls=0{% endif %}"
                          class="js-youtube"
                          allow="autoplay; encrypted-media"
                          allowfullscreen
                          autoplay="1"
                        >
                        </iframe>
                      {%- else -%}
                        <iframe
                          src="https://player.vimeo.com/video/{{ block.settings.videosd.id }}?{% if block.settings.autoplay %}autoplay=1{% endif %}&{% if block.settings.mute %}mute=1{% endif %}"
                          class="js-vimeo"
                          allow="autoplay; encrypted-media"
                          autoplay="1"
                          allowfullscreen
                        >
                        </iframe>
                      {%- endif -%}
                    </div>
                  {%- else -%}
                    <div class="shopify_video video-section__media">
                      {% assign muteopt = block.settings.mute %}
                      {% assign autoplayopt = block.settings.autoplay %}
                      {{
                        block.settings.video
                        | video_tag:
                          image_size: '1100x',
                          controls: false,
                          muted: muteopt,
                          autoplay: autoplayopt,
                          loop: 'loop'
                      }}
                    </div>
                  {%- endif -%}
                {%- endif -%}
              </div>
            {%- when 'three_image' -%}
              <div class="image_warp {% if block.settings.hide_in_desktop %} desktop_hide {% endif %} {% if block.settings.hide_in_mobile %} mobile_hide {% endif %}">
                {%- if block.settings.img1 != blank -%}
                  <div class="image_wrap">
                    <img
                      src="{{ block.settings.img1 | img_url : 'master' }}"
                      class=""
                      alt="img_1_{{ block.id }}"
                      loading="lazy"
                    >
                  </div>
                {%- endif -%}
                {%- if block.settings.img2 != blank -%}
                  <div class="image_wrap">
                    <img
                      src="{{ block.settings.img2 | img_url : 'master' }}"
                      class=""
                      alt="img_2_{{ block.id }}"
                      loading="lazy"
                    >
                  </div>
                {%- endif -%}
                {%- if block.settings.img3 != blank -%}
                  <div class="image_wrap">
                    <img
                      src="{{ block.settings.img3 | img_url : 'master' }}"
                      class=""
                      alt="img_3_{{ block.id }}"
                      loading="lazy"
                    >
                  </div>
                {%- endif -%}
              </div>
            {%- when 'six_image' -%}
              <div class="image_warp image-six-main {% if block.settings.hide_in_desktop %} desktop_hide {% endif %} {% if block.settings.hide_in_mobile %} mobile_hide {% endif %}">
                {%- if block.settings.img1 != blank -%}
